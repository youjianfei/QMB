<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >
    <RelativeLayout
        android:id="@+id/re_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/back_black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="帮手订单"
            android:textColor="@color/black"
            android:textSize="18sp" />

    </RelativeLayout>
    <com.jingnuo.quanmb.customview.CustomerScrollView
        android:layout_below="@+id/re_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linearlayout_tel"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/re1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="5dp"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_task"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/user_pic"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            />
        <TextView
            android:id="@+id/text_taskstate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="跑腿"
            android:textSize="12dp"
            android:textColor="@color/white"
            android:padding="2dp"
            android:background="@drawable/background_text_taskstate"
            android:layout_toRightOf="@+id/image_task"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="13dp"
            />

        <TextView
            android:id="@+id/text_tasktitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="13dp"
            android:layout_toRightOf="@+id/text_taskstate"
            android:text=""
            android:textColor="#333333"
            android:textSize="15dp" />
        <TextView
            android:id="@+id/text_taskmoney_"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/yellow_button"
            android:text="佣金：0.00元"
            android:textSize="15dp"
            android:layout_toRightOf="@+id/image_task"
            android:layout_below="@+id/text_tasktitle"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            />
        <TextView
            android:id="@+id/text_tasktime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black_text2"
            android:text="发布时间："
            android:textSize="13dp"
            android:layout_toRightOf="@+id/image_task"
            android:layout_below="@+id/text_taskmoney_"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="13dp"
            />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/re2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/re1"
        android:background="@color/white"
        android:layout_marginTop="8dp"
        >
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@mipmap/people"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="18dp"
            />
        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="雇主"
            android:textSize="15dp"
            android:textColor="#7f7f7f"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="15dp"
            />
        <TextView
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="雇主"
            android:textSize="15dp"
            android:textColor="@color/black_text"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            />
        <ImageView
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:src="@color/gray_dfdfdf"
            android:layout_below="@+id/text_name"
            android:layout_marginTop="16dp"
            />
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@mipmap/taskdetail"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="23dp"
            android:layout_below="@+id/line1"
            />
        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line1"
            android:text="任务说明"
            android:textSize="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:textColor="#7f7f7f"
            />
        <TextView
            android:id="@+id/text_taskdetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text2"
            android:text=""
            android:textSize="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="30dp"
            android:textColor="@color/black_text"
            />
        <com.jingnuo.quanmb.customview.MyGridView
            android:id="@+id/GridView_PIC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/white"
            android:layout_below="@+id/text_taskdetail"
            android:numColumns="3"/>
        <ImageView
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:src="@color/gray_dfdfdf"
            android:layout_below="@+id/GridView_PIC"
            />
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@mipmap/resttime"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="18dp"
            android:layout_below="@+id/line2"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line2"
            android:text="剩余完成时间"
            android:visibility="gone"
            android:textSize="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="50dp"
            android:textColor="#7f7f7f"
            />
        <TextView
            android:id="@+id/text_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="15dp"
            android:visibility="gone"
            android:textColor="@color/black_text"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/line2"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            />
        <ImageView
            android:id="@+id/line3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:src="@color/gray_dfdfdf"
            android:visibility="gone"
            android:layout_below="@+id/text3"
            android:layout_marginTop="16dp"
            />
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@mipmap/address_blue"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="18dp"
            android:layout_below="@+id/line3"
            />
        <TextView
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line3"
            android:text="地点"
            android:textSize="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="50dp"
            android:textColor="#7f7f7f"
            />
        <TextView
            android:id="@+id/text_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="15dp"
            android:textColor="@color/black_text"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/line3"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="15dp"
            android:gravity="right"
            />


    </RelativeLayout>
       <LinearLayout
           android:id="@+id/linearlayout_timecancle"
           android:layout_width="120dp"
           android:layout_height="120dp"
           android:orientation="vertical"
           android:layout_below="@+id/re2"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="20dp"
           android:layout_marginBottom="20dp"
           android:gravity="center"
           android:background="@mipmap/time_orange">
           <TextView
               android:id="@+id/resttime_tip"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="剩余时间"
               android:textColor="@color/white"
               android:textSize="15dp"
               />
           <TextView
               android:id="@+id/text_timecancle"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="2天12小时23分"
               android:textSize="12dp"
               android:textColor="@color/white"
                android:layout_marginTop="10dp"
               />
       </LinearLayout>



        </RelativeLayout>
    </com.jingnuo.quanmb.customview.CustomerScrollView>
    <LinearLayout
        android:id="@+id/linearlayout_tel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@color/white"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/tel_gray2"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="电话"
                android:textSize="15dp"
                android:textColor="#7f7f7f"
                android:enabled="false"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/button_bargain"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="申请完成"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:background="@color/yellow_button"
            android:enabled="false"
            android:gravity="center"
            />

    </LinearLayout>


</RelativeLayout>