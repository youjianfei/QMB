<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.jingnuo.quanmb.activity.LoginActivityPhone">
    <RelativeLayout
        android:id="@+id/re_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/back_black" />
        <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:text="全民帮"-->
        <!--android:textColor="@color/black"-->
        <!--android:textSize="18sp" />-->

    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:text="欢迎登录全民帮"
        android:textColor="@color/black"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="30dp"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"

        >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/accout"
            android:textColor="@color/gray_969696"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+86"
            android:layout_marginLeft="15dp"
            android:textSize="15dp"
            />
        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@mipmap/jiantou_xia1"
            android:layout_marginLeft="3dp"
            />
        <EditText
            android:id="@+id/edit_account"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="number"
            android:textColorHint="@color/gray_dbdbdb"
            android:textSize="15dp"
            android:background="@null"
            android:layout_marginLeft="15dp"
            />
        <Button
            android:id="@+id/button_yanzhengma"
            android:layout_width="70dp"
            android:layout_height="27dp"
            android:background="@drawable/text_yellow3"
            android:text="获取验证码"
            android:textSize="11dp"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"
            />

    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_background"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="16dp"
        >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/yanzhengma"
            android:textColor="@color/gray_969696"
            />
        <EditText
            android:id="@+id/edit_yanzhengma"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="请输入验证码"
            android:inputType="textPassword"
            android:textColorHint="@color/gray_dbdbdb"
            android:textSize="15dp"
            android:background="@null"
            android:layout_marginLeft="15dp"
            />

    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_background"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        />

    <Button
        android:id="@+id/button_submit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_below="@+id/text_4"
        android:background="@drawable/text_yellow3"
        android:text="登  录"
        android:textColor="@color/white"
        android:textSize="15dp" />
    <TextView
        android:id="@+id/textview_passwordLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="密码登录"
        android:textSize="13dp"
        android:layout_gravity="end"
        android:textColor="@color/yellow_jianbian_start"
        android:layout_marginTop="10dp"
        android:layout_marginRight="35dp"
        />
    <EditText
        android:id="@+id/edit_tuijianma"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="推荐码(选填)"
        android:inputType="text"
        android:textColorHint="@color/gray_dbdbdb"
        android:textSize="16dp"
        android:background="@null"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginTop="20dp"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_background"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/textview_yonghuxieyi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:textSize="13dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/gray_dbdbdb"
        android:text=""
        />

</LinearLayout>
