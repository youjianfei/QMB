<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_background"
    tools:context="com.jingnuo.quanmb.activity.MyShequActivity">
    <RelativeLayout
        android:id="@+id/re_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/back_black" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="我的社区"
            android:textColor="@color/black"
            android:textSize="18sp" />
    </RelativeLayout>
    <com.jingnuo.quanmb.customview.CustomerScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/re_title"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/gray_background"
            >
            <RelativeLayout
                android:id="@+id/relativelayout_banner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.youth.banner.Banner
                    android:id="@+id/banner_myshequ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                >
                <com.jingnuo.quanmb.customview.MyGridView
                    android:id="@+id/mygrid_mokuai"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:numColumns="4"
                    android:layout_marginBottom="10dp"
                    />
            </LinearLayout>


            <ImageView
                android:id="@+id/image_shuidian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/jiaoshuidian"
                />
            <com.jingnuo.quanmb.customview.MyListView
                android:id="@+id/listview_myshequ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@color/gray_background"
                android:dividerHeight="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/white"
                />

        </LinearLayout>
    </com.jingnuo.quanmb.customview.CustomerScrollView>

    <LinearLayout
        android:id="@+id/linearlayout_fabu"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="@drawable/button_yellow_20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:gravity="center"

        >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/fabuaixin"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发布"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            />

    </LinearLayout>
</RelativeLayout>