<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.jingnuo.quanmb.activity.OrderThinkSuccessActivity">
    <RelativeLayout
        android:id="@+id/re_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">
    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="10dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:src="@mipmap/back_black" />

</RelativeLayout>
    <RelativeLayout
        android:id="@+id/relativelayout_main"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/re_title"
        android:layout_margin="10dp"
        android:background="@mipmap/order_bg">
        <LinearLayout
            android:id="@+id/linearlayout_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/chenggong"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="评价成功"
                android:textSize="25dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/white"
                />

        </LinearLayout>
        <TextView
            android:id="@+id/textview_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="感谢您的评价,祝您生活愉快！"
            android:textSize="15dp"
            android:layout_marginLeft="15dp"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/linearlayout_tip"
            android:layout_marginTop="15dp"
            />

        <LinearLayout
            android:id="@+id/linearlayout_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_below="@+id/textview_tip"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">
         <Button
             android:id="@+id/button_main"
             android:layout_width="75dp"
             android:layout_height="30dp"
             android:text="返回首页"
             android:textColor="@color/white"
             android:background="@drawable/text_wehite_miaobian_20"
             />
            <Button
                android:id="@+id/button_issue"
                android:layout_width="75dp"
                android:layout_height="30dp"
                android:text="继续下单"
                android:textColor="@color/white"
                android:layout_marginLeft="15dp"
                android:background="@drawable/text_wehite_miaobian_20"
                />
        </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/learlayout_tip2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_below="@+id/relativelayout_main"
        android:gravity="center"
        >
        <ImageView
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/gray_969696"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分享有礼,分享返10元优惠券"
            android:textSize="15dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:textColor="@color/gray_969696"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/gray_969696"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearlayout_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/learlayout_tip2"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/image_wxShare"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/weixinlogo2"
            android:layout_centerInParent="true"
            android:layout_below="@+id/learlayout_tip2"
            />
        <ImageView
            android:id="@+id/image_wxcircleShare"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/pengyouquan"
            android:layout_marginLeft="60dp"
            android:layout_centerInParent="true"
            android:layout_below="@+id/learlayout_tip2"
            />
    </LinearLayout>

</RelativeLayout>