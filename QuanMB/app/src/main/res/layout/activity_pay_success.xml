<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_background"
    tools:context="com.jingnuo.quanmb.activity.PaySuccessActivity">

    <include
        android:id="@+id/re_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/include_title"
        />
    <ImageView
        android:id="@+id/dddd"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/paysuccess"
        android:layout_below="@+id/re_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        />
    <TextView
        android:id="@+id/text_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="充值成功"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/dddd"
        android:layout_marginTop="20dp"
        android:textSize="18dp"
        android:textColor="@color/text_black"
        />
    <Button
        android:id="@+id/button_submit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="确    认"
        android:textColor="@color/white"
        android:background="@drawable/button_yellow_20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_below="@+id/text_type"
        android:layout_marginTop="20dp"
        />






</RelativeLayout>