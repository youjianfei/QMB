<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_background"
    tools:context="com.jingnuo.quanmb.activity.SkillDetailActivity">
    <RelativeLayout
        android:id="@+id/re_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/background_logintitle">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/back_white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="服务详情"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </RelativeLayout>
    <com.jingnuo.quanmb.customview.CustomerScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/re_title"
        android:layout_above="@+id/linearlayout_bottom"
        android:background="@color/white"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text_shopskilltitel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="专业灯具上门安装维修清洗养护"
                android:textColor="@color/black"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:lines="1"
                />
            <TextView
                android:id="@+id/text_skillIssueTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:text="发布时间   2013.03.25"
                android:textColor="@color/text_hide_tip"
                android:layout_below="@+id/text_shopskilltitel"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:lines="1"
                />
            <TextView
                android:id="@+id/text_peoplelook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:text="已有1254人浏览"
                android:textColor="@color/text_hide_tip"
                android:layout_below="@+id/text_shopskilltitel"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:lines="1"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                />
            <ImageView
                android:id="@+id/image_line1"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/text_peoplelook"
                android:background="@color/gray_dbdbdb"
                />
            <TextView
                android:id="@+id/text_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:text="服务类型"
                android:textColor="@color/text_hide_tip"
                android:layout_below="@+id/image_line1"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:lines="1"
                />
            <TextView
                android:id="@+id/text_skilltype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:text="维修/安装"
                android:textColor="@color/black_text"
                android:layout_below="@+id/image_line1"
                android:layout_toRightOf="@+id/text_a"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:lines="1"
                />
            <ImageView
                android:id="@+id/image_line2"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/text_a"
                android:background="@color/gray_dbdbdb"
                />
            <TextView
                android:id="@+id/text_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:text="联系商家"
                android:textColor="@color/text_hide_tip"
                android:layout_below="@+id/image_line2"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:lines="1"
                />
            <TextView
                android:id="@+id/text_shoppeoplename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:text="李师傅"
                android:textColor="@color/black_text"
                android:layout_below="@+id/image_line2"
                android:layout_toRightOf="@+id/text_a"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:lines="1"
                />
            <ImageView
                android:id="@+id/image_line3"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/text_b"
                android:background="@color/gray_dbdbdb"
                />
            <TextView
                android:id="@+id/text_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:text="商家地址"
                android:textColor="@color/text_hide_tip"
                android:layout_below="@+id/image_line3"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:lines="1"
                />
            <TextView
                android:id="@+id/text_shopaddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:text="二七区 万达小区 1号楼"
                android:textColor="@color/black_text"
                android:layout_below="@+id/image_line3"
                android:layout_toRightOf="@+id/text_a"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="40dp"
                android:lines="1"
                />
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/address"
                android:layout_below="@+id/image_line3"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                />
            <ImageView
                android:id="@+id/image_line4"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/text_c"
                android:background="@color/gray_background"
                />
            <TextView
                android:id="@+id/text_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:text="认  证"
                android:textColor="@color/text_hide_tip"
                android:layout_below="@+id/image_line4"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:lines="1"
                />
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/certify"
                android:layout_below="@+id/image_line4"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/text_d"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:id="@+id/text_idcard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:text="身份认证"
                android:textColor="@color/yellow_jianbian_end"
                android:layout_below="@+id/image_line4"
                android:layout_toRightOf="@+id/text_a"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="40dp"
                android:lines="1"
                />
            <ImageView
                android:id="@+id/image_line5"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/text_d"
                android:background="@color/gray_background"
                />
            <TextView
                android:id="@+id/text_e"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:text="服务详情"
                android:textColor="@color/black_text"
                android:layout_below="@+id/image_line5"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:lines="1"
                />
            <ImageView
                android:id="@+id/image_line6"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/text_e"
                android:background="@color/gray_dbdbdb"
                />
            <TextView
                android:id="@+id/text_servicedetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:text="悟空和乌普在天神殿打斗，乌普这时已经将悟空术还有龟派气功等各种用气绝技领悟的很通透。悟空正想对乌普使用龟派气功，此时贝吉塔突然出现，一声大喊:卡卡罗特，你有时间在这里训练这小子，还不如跟我单挑然后暗笑了一番，突然间，一阵惊天地泣鬼神的吼声，贝吉塔化身超级赛亚人3，将天神殿震得直晃动！"
                android:textColor="@color/text_hide_tip"
                android:layout_below="@+id/image_line6"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:lineSpacingMultiplier="1.3"
                android:ellipsize="end"
                />
            <ImageView
                android:id="@+id/image_line7"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/text_servicedetail"
                android:background="@color/gray_dbdbdb"
                />
            <TextView
                android:id="@+id/text_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:text="展开更多"
                android:textColor="@color/text_hide_tip"
                android:layout_below="@+id/image_line7"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:lines="1"
                />
            <ImageView
                android:id="@+id/image_line8"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/text_more"
                android:background="@color/gray_background"
                />
            <ImageView
                android:id="@+id/image_shoppic"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@color/gray_dfdfdf"
                android:layout_below="@+id/image_line8"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                />
            <TextView
                android:id="@+id/text_shopname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:text="郑州灯管家"
                android:textColor="@color/black_text"
                android:layout_below="@+id/image_line8"
                android:layout_marginTop="27.5dp"
                android:layout_marginLeft="35dp"
                android:layout_toRightOf="@+id/image_shoppic"
                android:lines="1"
                />
            <ImageView
                android:id="@+id/image_line9"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/image_shoppic"
                android:background="@color/gray_background"
                />
            <TextView
                android:id="@+id/text_f"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11dp"
                android:text="办理业务前请不要付"
                android:textColor="@color/black_text"
                android:layout_below="@+id/image_line9"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:lines="1"
                />
            <TextView
                android:id="@+id/text_g"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11dp"
                android:text="定金、押金"
                android:textColor="@color/yellow_jianbian_end"
                android:layout_below="@+id/image_line9"
                android:layout_marginTop="10dp"
                android:lines="1"
                android:layout_toRightOf="@+id/text_f"
                />
            <TextView
                android:id="@+id/text_h"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11dp"
                android:text="等费用!"
                android:textColor="@color/black_text"
                android:layout_below="@+id/image_line9"
                android:layout_marginTop="10dp"
                android:lines="1"
                android:layout_toRightOf="@+id/text_g"
                />
            <TextView
                android:id="@+id/text_i"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11dp"
                android:text="请先确认对方资质，谨防上当受骗！"
                android:textColor="@color/black_text"
                android:layout_below="@+id/text_f"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:lines="1"
                />
            <ImageView
                android:id="@+id/image_complain"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_below="@+id/image_line9"
                android:layout_alignParentRight="true"
                android:src="@mipmap/complain"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11dp"
                android:text="投诉"
                android:textColor="@color/yellow_jianbian_end"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_below="@+id/image_complain"
                android:layout_marginTop="5dp"
                />
            <ImageView
                android:layout_width="0.5dp"
                android:layout_height="30dp"
                android:src="@color/text_hide_tip"
                android:layout_toLeftOf="@+id/image_complain"
                android:layout_marginRight="20dp"
                android:layout_below="@+id/image_line9"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                />



        </RelativeLayout>
    </com.jingnuo.quanmb.customview.CustomerScrollView>
    <LinearLayout
        android:id="@+id/linearlayout_bottom"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/collection"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收藏"
                android:layout_marginTop="3dp"
                android:textColor="@color/gray_969696"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearlayout_phonenumber"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@color/yellow_jianbian_start"
            >
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@mipmap/phone_white"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电话"
                android:textSize="14dp"
                android:textColor="@color/white"
                android:layout_marginLeft="5dp"

                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@color/yellow_jianbian_end"
            >
            <ImageView
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:src="@mipmap/chat_white"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微聊"
                android:textSize="14dp"
                android:textColor="@color/white"
                android:layout_marginLeft="5dp"
                />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
