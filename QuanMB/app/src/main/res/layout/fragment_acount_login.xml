<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:text="密码登录"
        android:textColor="@color/black"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="30dp"

        />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="30dp"

    >
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="20dp"
        android:src="@mipmap/accout"
        android:textColor="@color/gray_969696"
        />
    <EditText
        android:id="@+id/edit_account"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="请输入全民帮账号"
        android:inputType="number"
        android:textColorHint="@color/gray_dbdbdb"
        android:textSize="15dp"
        android:background="@null"
        android:layout_marginLeft="15dp"
        />

</LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_background"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="16dp"
        >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/password"
            android:textColor="@color/gray_969696"
            />
        <EditText
            android:id="@+id/edit_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:textColorHint="@color/gray_dbdbdb"
            android:textSize="15dp"
            android:background="@null"
            android:layout_marginLeft="15dp"
            />

    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_background"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        />


    <Button
        android:id="@+id/button_login"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:textColor="@color/white"
        android:text="登  录"
        android:textSize="16dp"
        android:background="@drawable/text_yellow3"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textview_forgotpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码"
            android:textSize="13dp"
            android:textColor="@color/yellow_jianbian_start"

            android:layout_marginTop="15dp"
            android:layout_marginLeft="50dp"
            />
        <TextView
            android:id="@+id/textview_yanzhengmalogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验证码登录"
            android:textSize="13dp"
            android:textColor="@color/yellow_jianbian_start"
            android:layout_marginTop="15dp"
            android:layout_marginRight="50dp"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>

