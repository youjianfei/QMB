<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ptr="http://schemas.android.com/apk/res-auto"
    android:background="@color/gray_background"
    android:orientation="vertical">

    <!--虚假布局，抢走editview的焦点-->
    <LinearLayout
        android:id="@+id/linearLayout_focus"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        />
    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/list_square"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:divider="@null"
        android:dividerHeight="5dp"
        ptr:ptrMode="both"
        />
    <RelativeLayout
        android:id="@+id/relative_sort"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/white">
        <!--android:background="@drawable/background_logintitle"-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="80dp"
            android:background="@drawable/background_gray_corners"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/search"
                android:layout_marginLeft="10dp"
                />
            <EditText
                android:id="@+id/edit_searchSquare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="输入关键字"
                android:singleLine="true"
                android:layout_marginRight="10dp"
                android:textColor="@color/text_title2"
                android:textColorHint="@color/text_hide_tip"
                android:textSize="14dp"
                android:imeOptions="actionSearch"
                android:layout_marginLeft="10dp"
                />

        </LinearLayout>
        <RelativeLayout
            android:id="@+id/relayout_address"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="35dp"
            >
            <TextView
                android:id="@+id/textview_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="35dp"
                android:layout_centerVertical="true"
                android:text="定位中"
                android:singleLine="true"
                android:textColor="@color/black_text"
                android:textSize="14sp" />
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginRight="12dp"
                android:layout_alignParentRight="true"
                android:src="@mipmap/jiantou_xia"
                android:layout_centerVertical="true"/>

        </RelativeLayout>



    </RelativeLayout>

    <RelativeLayout
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative_sort"
        android:background="@color/white">
        <TextView
            android:id="@+id/text_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="130dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:text="筛选"
            android:textColor="#888888"
            android:textSize="14dp" />

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:layout_marginTop="17dp"
            android:src="@mipmap/jiantou_xia1" />

        <TextView
            android:id="@+id/text_sort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="15dp"
            android:text="智能排序"
            android:textColor="#888888"
            android:textSize="14dp" />

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="110dp"
            android:layout_marginTop="17dp"
            android:src="@mipmap/jiantou_xia1" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/text_numberperson"
            android:background="@color/gray_background" />
    </RelativeLayout>












</RelativeLayout>
