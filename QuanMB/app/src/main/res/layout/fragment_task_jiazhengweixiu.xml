<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <ImageView
        android:id="@+id/imageview_jiazheng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前城市有"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textview_suiji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 0位 "
            android:textColor="@color/yellow_jianbian_start"
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="师傅接单"
            android:textColor="@color/black"
            android:textSize="15dp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:padding="5dp"
        android:text="选择服务·提交订单·师傅接单"
        android:textColor="@color/text_gray"
        android:textSize="13dp" />


    <com.jingnuo.quanmb.customview.MyGridView
        android:id="@+id/gridview_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="5dp"
        android:background="@color/white"
        android:numColumns="5" />
    <TextView
        android:id="@+id/textview_shouqi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:paddingRight="30dp"
        android:text="收起"
        android:visibility="gone"
        android:textColor="@color/yellow_jianbian_start"
        android:background="@color/white"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative_2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/background_white_corners_8">
        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:text="描述："
            android:textColor="@color/text_title2"
            android:textSize="15dp" />
        <TextView
            android:id="@+id/edit_detailtask"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="45dp"
            android:gravity="bottom"
            android:text="屏幕问题"
            android:textColor="@color/text_hide_tip"
            android:textSize="14dp" />
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_marginTop="17dp"
            android:src="@mipmap/more" />
        <!--<ImageView-->
            <!--android:id="@+id/image_chosePIC"-->
            <!--android:layout_width="20dp"-->
            <!--android:layout_height="20dp"-->
            <!--android:layout_below="@+id/edit_detailtask"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_marginRight="30dp"-->
            <!--android:visibility="visible"-->
            <!--android:src="@mipmap/chosepic" />-->

        <!--<com.jingnuo.quanmb.customview.MyGridView-->
            <!--android:id="@+id/GridView_PIC"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_below="@+id/image_chosePIC"-->
            <!--android:layout_marginBottom="10dp"-->
            <!--android:layout_marginLeft="30dp"-->
            <!--android:layout_marginRight="30dp"-->
            <!--android:background="@color/white"-->
            <!--android:numColumns="3"-->
            <!--android:visibility="gone" />-->

        <ImageView
            android:id="@+id/image_line2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/edit_detailtask"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@color/gray_background" />

        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_line2"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:text="预约时间："
            android:textColor="@color/text_title2"
            android:textSize="15dp" />

        <RelativeLayout
            android:id="@+id/relative_chosetime"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@+id/image_line2">

            <TextView
                android:id="@+id/edit_tasktime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="110dp"
                android:layout_marginRight="45dp"
                android:layout_marginTop="15dp"
                android:text="尽快"
                android:textColor="@color/text_hide_tip"
                android:textSize="14dp" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:layout_marginTop="17dp"
                android:src="@mipmap/more" />

        </RelativeLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/button_submitsave"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_yellow_20dp"
        android:text="免费预约"
        android:textColor="@color/white"
        android:textSize="15dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
