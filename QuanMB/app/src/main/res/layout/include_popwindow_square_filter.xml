<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.jingnuo.quanmb.customview.CustomerScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:orientation="vertical"
            android:background="@color/white"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="任务类型"
                android:textColor="@color/text_hide_tip"
                android:textSize="15dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                />
            <com.jingnuo.quanmb.customview.MyGridView
                android:id="@+id/mygridview_filter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="8dp"
                android:background="@color/white"
                android:numColumns="3">

            </com.jingnuo.quanmb.customview.MyGridView>
            <ImageView
                android:id="@+id/image_line1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_below="@+id/edit_realname"
                android:layout_marginTop="10dp"
                android:background="@color/gray_dbdbdb"
                />
            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="50dp" />


        </LinearLayout>
    </com.jingnuo.quanmb.customview.CustomerScrollView>


</LinearLayout>
