<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_person">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/image_typePIC"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            />
        <TextView
            android:id="@+id/text_type"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="全民帮"
            android:textColor="@color/black"
            android:gravity="left|center"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/image_typePIC"
            android:textSize="18dp"
            />
        <TextView
            android:id="@+id/textview_titl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/text_type"
            android:text="全民帮"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/text_type"
            android:textColor="@color/black"
            android:textSize="15dp" />


        <TextView
            android:id="@+id/textview_issuename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_toRightOf="@+id/image_typePIC"
            android:textSize="13dp"
            android:layout_below="@+id/text_type"
            android:text="发布时间：2018.03.25 10：22"
            android:textColor="@color/text_gray" />


        <ImageView
            android:id="@+id/image_01"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/image_typePIC"
            android:background="@color/gray_background" />
        <TextView
            android:id="@+id/text_taskstate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_01"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="12dp"
            android:background="@color/yellow_jianbian_start"
            android:text="任务状态"
            android:layout_alignParentRight="true"
            android:textColor="@color/white" />
        <TextView
            android:id="@+id/text_taskcancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_01"
            android:layout_marginTop="12dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="15dp"
            android:textSize="14dp"
            android:layout_toLeftOf="@+id/text_taskstate"
            android:text="取消"
            android:textColor="@color/gray_969696" />
    </RelativeLayout>





