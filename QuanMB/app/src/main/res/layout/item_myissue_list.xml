<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_person">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/text_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="维修"
            android:textColor="@color/white"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:textSize="12dp"
            android:background="@drawable/text_yellow2"
            />
        <TextView
            android:id="@+id/textview_issuename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/text_type"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:textSize="12dp"
            android:text="2018.03.25 10：22"
            android:textColor="@color/gray_969696" />
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@mipmap/title"
            android:layout_below="@+id/text_type"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="15dp"
            />

    <TextView
        android:id="@+id/textview_titl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="15dp"
        android:text="需要一个装修工"
        android:textColor="@color/text_black"
        android:layout_below="@+id/text_type"
        android:textSize="15dp" />
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@mipmap/money_blue"
            android:layout_below="@+id/textview_titl"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="15dp"
            />

    <TextView
        android:id="@+id/textview_moneyy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_titl"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="15dp"
        android:text="佣金：2000元"
        android:textColor="@color/red"
        android:textSize="15dp" />



    <ImageView
        android:id="@+id/image_01"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/textview_moneyy"
        android:layout_marginTop="20dp"
        android:background="@color/gray_background" />
        <RelativeLayout
            android:id="@+id/resttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_01"
            >
            <ImageView
                android:id="@+id/iamge_resttimepic"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/resttime"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="15dp"
                />
            <TextView
                android:id="@+id/text_resttime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:padding="3dp"
                android:textSize="12dp"
                android:text="剩余时间："
                android:layout_marginLeft="30dp"
                android:textColor="@color/black_text2" />
        </RelativeLayout>

    <TextView
        android:id="@+id/text_taskstate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_01"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:padding="3dp"
        android:textSize="12dp"
        android:background="@drawable/text_green2"
        android:text="任务状态"
        android:layout_alignParentRight="true"
        android:textColor="@color/white" />
        <TextView
            android:id="@+id/text_taskcancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_01"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="15dp"
            android:padding="3dp"
            android:textSize="12dp"
            android:layout_toLeftOf="@+id/text_taskstate"
            android:background="@drawable/text_gray2"
            android:text="取消"
            android:textColor="@color/white" />

    <!--<TextView-->
        <!--android:id="@+id/text_resttime"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_marginRight="20dp"-->
        <!--android:layout_marginTop="20dp"-->
        <!--android:layout_alignBottom="@+id/text_helpername"-->
        <!--android:textSize="12dp"-->
        <!--android:text="剩余时间：36小时" />-->
    </RelativeLayout>

</RelativeLayout>
