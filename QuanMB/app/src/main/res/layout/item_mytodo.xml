<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_person">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textview_titl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:text="需要一个装修工"
            android:textColor="@color/text_black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textview_moneyy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview_titl"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:text="佣金：2000元"
            android:textColor="@color/red"
            android:textSize="15dp" />
        <TextView
            android:id="@+id/textview_state2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/textview_moneyy"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:textSize="12dp"
            android:text="服务中"
            android:textColor="@color/yellow_jianbian_start" />
        <TextView
            android:id="@+id/text_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview_moneyy"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:text="这里是任务的详细描述" />

        <ImageView
            android:id="@+id/image_01"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/text_content"
            android:layout_marginTop="10dp"
            android:background="@color/gray_background" />

        <TextView
            android:id="@+id/text_taskscomplete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_01"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:paddingLeft="5dp"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:paddingRight="5dp"
            android:textSize="13dp"
            android:background="@drawable/text_gray"
            android:text="确认完成"
            android:layout_alignParentRight="true"
            android:textColor="@color/text_gray" />
        <TextView
            android:id="@+id/text_bargain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_01"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:paddingLeft="5dp"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:paddingRight="5dp"
            android:textSize="13dp"
            android:background="@drawable/text_gray"
            android:layout_toLeftOf="@+id/text_taskscomplete"
            android:text="还 价"
            android:textColor="@color/text_gray" />


        <!--<TextView-->
        <!--android:id="@+id/text_resttime"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_marginRight="20dp"-->
        <!--android:layout_marginTop="20dp"-->
        <!--android:layout_alignBottom="@+id/text_helpername"-->
        <!--android:textSize="12dp"-->
        <!--android:text="剩余时间：36小时" />-->
    </RelativeLayout>
</RelativeLayout>
