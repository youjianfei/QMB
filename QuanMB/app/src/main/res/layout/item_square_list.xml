<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >
    <LinearLayout
        android:id="@+id/relative_sort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/re_title"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="visible"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="热门任务"
            />

        <RelativeLayout
            android:id="@+id/relative_shaixuan"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/relative_sort"
            android:background="@color/white">
            <LinearLayout
                android:id="@+id/text_filter"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_marginRight="110dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:text="筛选"
                    android:textColor="#888888"
                    android:textSize="14dp" />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/jiantou_xia1"
                    android:layout_marginLeft="10dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/text_sort"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:text="智能排序"
                    android:textColor="#888888"
                    android:textSize="14dp" />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/jiantou_xia1"
                    android:layout_marginLeft="10dp"
                    />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_background"
                android:layout_alignParentBottom="true"
                />


        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/relativelayout_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:visibility="visible"
        >
        <TextView
            android:id="@+id/text_square_task"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="任务名称"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            />
        <TextView
            android:id="@+id/text_square_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="23.68元"
            android:textColor="#fb1419"
            android:layout_alignParentRight="true"
            android:textSize="16dp"
            android:layout_marginRight="15dp"
            android:layout_alignBaseline="@+id/text_square_task"
            />
        <TextView
            android:id="@+id/text_square_time"
            android:text="刚刚"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#666666"
            android:textSize="12dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:layout_alignBaseline="@+id/text_square_type"

            />
        <TextView
            android:id="@+id/text_square_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_square_task"
            android:background="@drawable/background_text_type"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:layout_toRightOf="@+id/text_square_address"
            android:text="维 修"
            android:textColor="@color/yellow_button"
            android:textSize="12dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            />
        <TextView
            android:id="@+id/text_square_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地址信息"
            android:textSize="12dp"
            android:textColor="#7f7f7f"
            android:layout_below="@+id/text_square_task"
            android:layout_marginLeft="16dp"
            android:layout_alignBaseline="@+id/text_square_type"
            android:singleLine="true"
            />
        <ImageView
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:src="@color/gray_background"
            android:layout_below="@+id/text_square_address"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_square_person"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="20dp"
            android:layout_below="@+id/line2"
            android:src="@mipmap/user_pic" />

        <TextView
            android:id="@+id/text_taskpeoplename"
            android:text="发帖人"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#666666"
            android:textSize="12dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/image_square_person"
            android:layout_below="@+id/line2"
            />
        <TextView
            android:id="@+id/text_taskdistance"
            android:text="定位失败"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#666666"
            android:textSize="12dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/image_square_person"
            android:layout_below="@+id/text_taskpeoplename"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="帮 助"
            android:textColor="@color/white"
            android:background="@drawable/button_yellow_5dp"
            android:layout_below="@+id/line2"
            android:layout_marginTop="8dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:textSize="12dp"
            android:layout_marginRight="16dp"
            android:layout_alignParentRight="true"
            android:layout_alignBaseline="@+id/text_taskdistance"
            />
        <ImageView
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/gray_background"
        android:layout_alignParentBottom="true"
        />
    </RelativeLayout>


</LinearLayout>
