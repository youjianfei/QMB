<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_white_corners"
    >
    <TextView
        android:id="@+id/textview_title"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="温馨提示"
        android:gravity="center"
        android:textColor="@color/yellow_jianbian_start"
        android:textSize="18dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />
    <TextView
        android:id="@+id/textview_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:gravity="center"
        android:textColor="@color/text_title2"
        android:layout_below="@+id/textview_title"
        android:textSize="15dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/textview_text"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        >
        <TextView
            android:id="@+id/textview_cancle"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="确认取消"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/button_gray_20dp"
            />

        <TextView
            android:id="@+id/textview_submit"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="换一个"
            android:textColor="@color/white"
            android:layout_marginLeft="25dp"
            android:gravity="center"
            android:background="@drawable/button_red_20dp"
            />


    </LinearLayout>





</RelativeLayout>
