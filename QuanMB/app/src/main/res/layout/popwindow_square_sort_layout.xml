<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:id="@+id/relative_sort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/re_title"
        android:background="@color/white">
        <TextView
            android:id="@+id/text_numberperson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:text="25位帮友在此求助"
            android:textColor="#888888"
            android:textSize="14dp" />
        <TextView
            android:id="@+id/text_filter_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="130dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:text="筛选"
            android:textColor="#888888"
            android:textSize="14dp" />

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:layout_marginTop="17dp"
            android:src="@mipmap/jiantou_xia1" />

        <TextView
            android:id="@+id/text_sort_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="15dp"
            android:text="智能排序"
            android:textColor="#888888"
            android:textSize="14dp" />

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="110dp"
            android:layout_marginTop="17dp"
            android:src="@mipmap/jiantou_xia1" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/text_numberperson"
            android:background="@color/gray_background" />
    </RelativeLayout>

    <include
        android:id="@+id/include_sort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/include_popwindow_square_sort"
        android:visibility="gone"
        />
    <include
        android:id="@+id/include_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/include_popwindow_square_filter"
        android:visibility="gone"
        />
    <ImageView
        android:id="@+id/iamgeview_a"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:background="@color/black"
        />
</LinearLayout>
